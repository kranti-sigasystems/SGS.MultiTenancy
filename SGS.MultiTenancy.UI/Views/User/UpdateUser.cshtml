@model SGS.MultiTenancy.UI.Models.UserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid mt-4">

    <div class="mb-4">
        <h4 class="fw-semibold">Edit User</h4>
    </div>

    <form asp-action="UpdateUser"
          asp-controller="User"
          method="post"
          enctype="multipart/form-data"
          novalidate>

        <input asp-for="User.ID" type="hidden" />
        <input asp-for="User.AvtarUrl" type="hidden" />

        <!-- USER DETAILS -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <strong>User Details</strong>
            </div>

            <div class="card-body">
                <div class="row g-3">

                    <div class="col-md-4">
                        <label asp-for="User.UserName" class="form-label"></label>
                        <input asp-for="User.UserName"
                               class="form-control"
                               placeholder="Enter username" />
                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="User.Email" class="form-label"></label>
                        <input asp-for="User.Email"
                               class="form-control"
                               placeholder="Enter email address" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="User.Addresses[0].PhoneNumber"
                               class="form-control"
                               placeholder="Enter phone number" />
                    </div>

                    <!-- STATUS -->
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <div class="mt-2">
                            @foreach (var option in Model.StatusOptions!)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           asp-for="User.Status"
                                           value="@option.Value" />
                                    <label class="form-check-label">
                                        @option.Text
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="User.Status" class="text-danger"></span>
                    </div>

                    <!-- AVATAR -->
                    <div class="col-md-4">
                        <label class="form-label">Avatar</label>

                        @if (!string.IsNullOrEmpty(Model.User.AvtarUrl))
                        {
                            <div class="mb-2">
                                <img src="/@Model.User.AvtarUrl"
                                     class="img-thumbnail"
                                     style="max-height:100px;" />
                            </div>
                        }

                        <input type="file"
                               asp-for="User.ProfileImage"
                               class="form-control"
                               accept="image/*" />
                    </div>

                </div>
            </div>
        </div>

        <!-- ADDRESS DETAILS -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <strong>Address Details</strong>
            </div>

            <div class="card-body">
                <div class="row g-3">

                    <input asp-for="User.Addresses[0].Id" type="hidden" />

                    <div class="col-md-4">
                        <label class="form-label">Address Line</label>
                        <input asp-for="User.Addresses[0].AddressLine"
                               class="form-control"
                               placeholder="Enter address line" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Postal Code</label>
                        <input asp-for="User.Addresses[0].PostalCode"
                               class="form-control"
                               placeholder="Enter postal code" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">City</label>
                        <input asp-for="User.Addresses[0].City"
                               class="form-control"
                               placeholder="Enter city" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Country</label>
                        <select asp-for="User.Addresses[0].Country"
                                asp-items="Model.Countries"
                                class="form-select countryDropdown"
                                data-index="0">
                            <option value="">-- Select Country --</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">State</label>
                        <select asp-for="User.Addresses[0].State"
                                asp-items="Model.States"
                                class="form-select stateDropdown">
                            <option value="">-- Select State --</option>
                        </select>
                    </div>

                    <div class="col-md-4 d-flex align-items-center">
                        <div class="form-check mt-3">
                            <input asp-for="User.Addresses[0].IsDefault"
                                   class="form-check-input" />
                            <label class="form-check-label">
                                Default Address
                            </label>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-end gap-2">
            <a asp-action="Index"
               asp-controller="User"
               class="btn btn-secondary">
                Cancel
            </a>

            <button type="submit" class="btn btn-primary">
                Update User
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}