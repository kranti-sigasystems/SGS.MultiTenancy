@model SGS.MultiTenancy.UI.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - SaaSPro</title>
</head>

<body>

    <section class="vh-lg-100 bg-soft d-flex align-items-center pt-5">
        <div class="container mt-5">

                <div class="col-12 d-flex align-items-center justify-content-center">
                    <div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500 mt-4">

                        <!-- Header -->
                        <div class="text-center mb-4 mt-md-0">
                        <h1 class="mb-0 h3">Login</h1>
                        </div>

                        <!-- Success Message -->
                        @if (TempData["SuccessMessage"] is string successMessage && !string.IsNullOrWhiteSpace(successMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @successMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Error Summary -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @Html.ValidationSummary(false)
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Form -->
                        <form asp-controller="Auth" asp-action="Login" method="post" class="mt-4">
                            @Html.AntiForgeryToken()

                            <!-- Username -->
                            <div class="form-group mb-4">
                                <label class="form-label">User Name</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M10 10a4 4 0 100-8 4 4 0 000 8zm-7 8a7 7 0 1114 0H3z"></path>
                                        </svg>
                                    </span>
                                    <input asp-for="UserName"
                                           class="form-control"
                                           placeholder="Enter your username"
                                           required />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="form-group mb-4">
                                <label class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                    <svg class="icon icon-xs text-gray-600"
                                         fill="currentColor"
                                         viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                              d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                              clip-rule="evenodd"></path>
                                    </svg>
                                    </span>
                                    <input asp-for="Password"
                                           type="password"
                                           class="form-control"
                                           placeholder="Password"
                                           required />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                       
                            <!-- Submit -->
                            <div class="d-grid">
                            <button type="submit" class="btn btn-outline-primary">
                                    Login 
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
