@using SGS.MultiTenancy.Core.Domain.Common
@using SGS.MultiTenancy.Core.Application.DTOs.Tenants
@using SGS.MultiTenancy.Core.Domain.Enums
@model TenantDto

@{
    Layout = null;
}

<div class="modal fade" id="editTenantModal-@Model.ID" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Edit Tenant"))

            <div class="modal-body" id="editTenantBody">

                <form asp-action="UpdateTenant"
                      method="post"
                      enctype="multipart/form-data"
                      novalidate>
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-light">
                            <strong>Business Details</strong>
                        </div>

                        <div class="card-body">
                            <div class="row g-3">
                                <input asp-for="ID" hidden readonly/>
                                <input asp-for="LogoUrl" hidden readonly/>
                                <div class="col-md-4">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name"
                                           class="form-control"
                                           id="TenantName"
                                           placeholder="Enter business name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Slug" class="form-label">Subdomain</label>
                                    <input asp-for="Slug"
                                           class="form-control"
                                           id="Slug"
                                           placeholder="Enter subdomain" />
                                    <span asp-validation-for="Slug" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Domain" class="form-label"></label>
                                    <input asp-for="Domain"
                                           class="form-control"
                                           placeholder="Enter domain" />
                                    <span asp-validation-for="Domain" class="text-danger"></span>
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label">Business Logo</label>
                                    <div class="logo-upload-wrapper">
                                        <img src="/@Model.LogoUrl"
                                             alt="No Logo"
                                             class="logo-preview " />

                                        <div class="logo-overlay">
                                            <span>Upload Logo</span>
                                        </div>
                                        <input type="file"
                                               asp-for="BusinessLogo"
                                               accept="image/*"
                                               class="logo-input" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label d-block">Tenant Status</label>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input"
                                               type="radio"
                                               asp-for="Status"
                                               id="statusActive"
                                               value="Active"
                                               checked>
                                        <label class="form-check-label" for="statusActive">
                                            Active
                                        </label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input"
                                               type="radio"
                                               asp-for="Status"
                                               id="statusInactive"
                                               value="Inactive">
                                        <label class="form-check-label" for="statusInactive">
                                            Inactive
                                        </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml", false)
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("EditTenantName-@Model.ID")
        ?.addEventListener("input", function () {

            let text = this.value.toLowerCase()
                .replace(/[^a-z0-9\s-]/g, "")
                .replace(/\s+/g, "-")
                .replace(/-+/g, "-");

            document.getElementById("EditSlug-@Model.ID").value = text;
        });
</script>