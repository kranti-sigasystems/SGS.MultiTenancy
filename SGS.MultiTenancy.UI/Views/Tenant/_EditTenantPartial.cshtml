@using SGS.MultiTenancy.Core.Domain.Common
@using SGS.MultiTenancy.Core.Application.DTOs.Tenants
@using SGS.MultiTenancy.Core.Domain.Enums
@model TenantDto

@{
    Layout = null;
}

<div class="modal fade" id="editTenantModal-@Model.ID" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Edit Tenant"))

            <div class="modal-body" id="editTenantBody">

                <form asp-action="UpdateTenant"
                      method="post"
                      enctype="multipart/form-data"
                      novalidate>
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-light">
                            <strong>Business Details</strong>
                        </div>

                        <div class="card-body">
                            <div class="row g-3">

                                <div class="col-md-4">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name"
                                           class="form-control"
                                           id="TenantName"
                                           placeholder="Enter business name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Slug" class="form-label">Subdomain</label>
                                    <input asp-for="Slug"
                                           class="form-control"
                                           id="Slug"
                                           placeholder="Enter subdomain" />
                                    <span asp-validation-for="Slug" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Domain" class="form-label"></label>
                                    <input asp-for="Domain"
                                           class="form-control"
                                           placeholder="Enter domain" />
                                    <span asp-validation-for="Domain" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Business Logo</label>
                                    <input type="file"
                                           name="BusinessLogo"
                                           class="form-control"
                                           accept="image/*" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <strong>User Details</strong>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">

                                <div class="col-md-4">
                                    <label asp-for="UserDto.UserName" class="form-label"></label>
                                    <input asp-for="UserDto.UserName"
                                           class="form-control"
                                           placeholder="Enter username" />
                                    <span asp-validation-for="UserDto.UserName" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="UserDto.Email" class="form-label"></label>
                                    <input asp-for="UserDto.Email"
                                           class="form-control"
                                           placeholder="Enter email address" />
                                    <span asp-validation-for="UserDto.Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="UserDto.Password" class="form-label"></label>
                                    <input asp-for="UserDto.Password" type="password"
                                           class="form-control"
                                           placeholder="Enter password" />
                                    <span asp-validation-for="UserDto.Password" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Avatar</label>
                                    <input type="file"
                                           name="UserDto.ProfileImage"
                                           class="form-control"
                                           accept="image/*" />
                                </div>
                            </div>
                        </div>
                    </div>
                    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml",false)
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("EditTenantName-@Model.ID")
        ?.addEventListener("input", function () {

            let text = this.value.toLowerCase()
                .replace(/[^a-z0-9\s-]/g, "")
                .replace(/\s+/g, "-")
                .replace(/-+/g, "-");

            document.getElementById("EditSlug-@Model.ID").value = text;
        });
</script>