@model List<SGS.MultiTenancy.Core.Application.DTOs.Tenants.TenantDto>
@using SGS.MultiTenancy.Core.Domain.Common
@using SGS.MultiTenancy.Core.Domain.Enums
@using System.ComponentModel

@{
    ViewData["Title"] = "Tenants";
}

<div class="container-fluid px-4">

    <div class="d-flex justify-content-between align-items-center my-4">
        <h4 class="fw-semibold mb-0">Tenants List</h4>

        <a asp-action="AddTenant"
           class="btn btn-outline-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Create Tenant
        </a>
    </div>

    <div class="card border-0 shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-centered table-nowrap mb-0 rounded">
                    <thead class="thead-light">
                        <tr>
                            <th class="border-0 rounded-start ps-sm-2">Name</th>
                            <th class="border-0 ps-sm-2">Slug</th>
                            <th class="border-0 ps-sm-2">Domain</th>
                            <th class="border-0 ps-sm-2">Status</th>
                            <th class="border-0 rounded-end ps-sm-3">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var t in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@t.Name</td>
                                    <td class="text-muted">@(string.IsNullOrWhiteSpace(t.Slug) ? "-" : t.Slug)</td>
                                    <td>@(string.IsNullOrWhiteSpace(t.Domain) ? "-" : t.Domain)</td>

                                    <td>
                                        <span class="status-badge @(t.Status == EntityStatus.Active ? "status-active" : "status-inactive")">
                                            @t.Status
                                        </span>
                                    </td>

                                    <td>
                                        <button class="bg-light text-muted p-0 me-3"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editTenantModal-@t.ID"
                                                data-id="@t.ID"
                                                title="Edit"
                                                style="border:none;">
                                            <i class="bi bi-pencil-square fs-5"></i>
                                        </button>

                                        <button class="bg-light text-muted p-0"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteTenantModal-@t.ID"
                                                data-tenant-id="@t.ID"
                                                data-tenant-name="@t.Name"
                                                style="border:none;">
                                            <i class="bi bi-trash fs-5"></i>
                                        </button>
                                    </td>
                                </tr>
                                @await Html.PartialAsync("_EditTenantPartial", t)
                                @await Html.PartialAsync("_DeleteTenantModal", t)
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No tenants found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>