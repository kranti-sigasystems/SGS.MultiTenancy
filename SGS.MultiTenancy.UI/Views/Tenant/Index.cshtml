@model List<SGS.MultiTenancy.Core.Application.DTOs.Tenants.TenantDto>


@{
    ViewData["Title"] = "Tenants";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <a asp-action="AddTenant" class="btn  rounded-pill px-4 shadow-sm ms-auto bg-color">
            <i class="bi bi-plus-circle me-2"></i> Create Tenant
        </a>
    </div>

    <div class="card-body p-0">
        <table class="table text-center p-4">
            <thead class="table-header">
                <tr>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Domain</th>
                    <th>Status</th>
                    <th>Logo</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Name</td>
                            <td>
                                <span class="badge bg-secondary">@t.Slug</span>
                            </td>
                            <td>@t.Domain</td>
                            <td>
                                <span class="badge @(t.Status == SGS.MultiTenancy.Core.Domain.Enums.EntityStatus.Active ? "bg-success" : "bg-danger")">
                                    @t.Status
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(t.LogoUrl))
                                {
                                    <img src="@t.LogoUrl" style="height:32px;" />
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="text-center">
                                <button class="bg-light text-brand btn-link p-0 me-4"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editTenantModal"
                                        data-id="@t.ID"
                                        title="Edit" style="border:none;">
                                    <i class="bi bi-pencil-square fs-5"></i>
                                </button>

                                <button class="bg-light text-brand btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteTenantModal"
                                        data-tenant-id="@t.ID"
                                        data-tenant-name="@t.Name"
                                        style="border:none;">
                                    <i class="bi bi-trash fs-5"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No tenants found.</td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="text-center">
            <!-- Add this form -->
            <form asp-controller="Home"
                  asp-action="TestDivideByZero"
                  method="post"
                  class="d-inline">

                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                <button type="submit" class="btn btn-sm btn-danger ms-2">
                    <i class="bi bi-bug-fill"></i> Test Error
                </button>
            </form>
        </div>
    </div>
</div>

@* model *@

<div class="modal fade" id="addressModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content shadow-sm">

            <div class="modal-header text-white"
                 style="background-color:#00305f;">
                <h6 class="modal-title mb-0">
                    <i class="bi bi-geo-alt-fill me-1"></i>
                    Tenant Address
                </h6>
                <button type="button" class="btn-close btn-close-white"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body py-2">
                <dl class="row mb-0 small">
                    <dt class="col-5 text-muted">Address</dt>
                    <dd class="col-7" id="modalLine1"></dd>

                    <dt class="col-5 text-muted">City</dt>
                    <dd class="col-7" id="modalCity"></dd>

                    <dt class="col-5 text-muted">State</dt>
                    <dd class="col-7" id="modalState"></dd>

                    <dt class="col-5 text-muted">Country</dt>
                    <dd class="col-7" id="modalCountry"></dd>

                    <dt class="col-5 text-muted">Postal</dt>
                    <dd class="col-7" id="modalPostal"></dd>
                </dl>
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Include Modal Partials -->
@await Html.PartialAsync("_EditTenantModal")
@await Html.PartialAsync("_DeleteTenantModal")


