@model SGS.MultiTenancy.UI.Models.TenantDiscoveryViewModel

<body>
    <div class="auth-wrapper">
        <div class="auth-container">
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-1">Find your workspace</h2>
                <p class="text-muted mb-0">
                    Enter your business name to continue
                </p>
            </div>

            <form asp-controller="Tenant" asp-action="Discovery" method="post">
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Html.ValidationSummary(false)
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                <div class="mb-3">
                    <label class="form-label fw-semibold">Tenant / Business Name</label>
                    <input asp-for="TenantName"
                           class="form-control"
                           placeholder="e.g. siga" />
                    <span asp-validation-for="TenantName"
                          class="text-danger small"></span>
                </div>

                <button type="submit" class="btn w-100 mb-3">
                    Continue
                </button>
            </form>

            <p class="text-center mt-4 text-muted mb-0">
                New organization?
                <a asp-controller="Auth"
                   asp-action="Register"
                   class="fw-semibold text-decoration-none">
                    Create an account
                </a>
            </p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

