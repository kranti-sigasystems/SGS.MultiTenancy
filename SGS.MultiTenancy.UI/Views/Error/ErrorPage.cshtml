@model SGS.MultiTenancy.UI.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="col-lg-7 col-md-9 col-sm-12">
        <div class="card shadow-lg border-0 rounded-4">

            <div class="card-header bg-light text-center border-0 rounded-top-4">
                <i class="fas fa-exclamation-triangle text-danger fa-3x mb-3"></i>
                <h3 class="fw-normal mb-0">Error</h3>
            </div>

            <div class="card-body text-center">
                <div class="alert d-inline-flex align-items-center gap-2 rounded-3">
                    <i class="fas fa-info-circle"></i>
                    <p>
                        <strong>Reference ID:</strong> @Model.LogId
                    </p>
                </div>
                <p class="text-muted">
                    @Model.ErrorMessage. If the issue persists, please contact our support team and share the reference ID above.
                </p>

                <a href="@Model.ReturnUrl" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-2"></i>
                    Return to Previous
                </a>
            </div>
        </div>
    </div>
</div>
