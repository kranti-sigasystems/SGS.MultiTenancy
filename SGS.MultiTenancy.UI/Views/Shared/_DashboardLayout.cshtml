<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#2c3e50;">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-layers me-2"></i> SGS
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse"
                     id="mainNavbar">
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-menu dropdown">
                        <button class="btn btn-white d-flex align-items-center gap-2 dropdown-toggle"
                                type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">

                            <span class="username">@User.Identity.Name</span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li>
                                <a class="dropdown-item" asp-controller="Auth" asp-action="ChangePassword">
                                    <i class="bi bi-lock me-2"></i> Reset Password
                                </a>
                            </li>
                            <li>
                                <form method="post" asp-action="Logout" asp-controller="Auth">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="d-flex min-vh-100">

        <aside id="sidebar" class="sidebar bg-dark text-white d-flex flex-column py-4 px-3">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h6 class="fw-bold small text-gray-500 mb-0 sidebar-title">
                    ADMIN PANEL
                </h6>

                <button id="sidebarToggle" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <ul class="nav flex-column gap-1">
                @if (User.IsInRole("SGS_SuperHost"))
                {
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext?.RouteData?.Values["controller"]?.ToString() == "Tenant" ? "active" : "")" asp-controller="Tenant" asp-action="Index">
                            <i class="bi bi-buildings"></i>
                            <span class="sidebar-text">Tenants</span>
                        </a>
                    </li>
                }
                @if (!User.IsInRole("SGS_SuperHost"))
                {
                    <li class="nav-item">
                        <a class="nav-link sidebar-link @(ViewContext?.RouteData?.Values["controller"]?.ToString() == "User" ? "active" : "")" asp-controller="User" asp-action="Index">
                            <i class="bi bi-people"></i>
                            <span class="sidebar-text">Users</span>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link sidebar-link @(ViewContext?.RouteData?.Values["controller"]?.ToString() == "Role" ? "active" : "")" asp-controller="Role" asp-action="Index">
                        <i class="bi bi-people-fill"></i>
                        <span class="sidebar-text">Roles</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidebar-link @(ViewContext?.RouteData?.Values["controller"]?.ToString() == "Permission" ? "active" : "")" asp-controller="Permission" asp-action="Index">
                        <i class="bi bi-shield-lock"></i>
                        <span class="sidebar-text">Permissions</span>
                    </a>
                </li>
            </ul>
        </aside>

        <main class="flex-fill p-4 main-content">
            @RenderBody()
        </main>

    </div>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>

         document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("sidebar");
            const toggleBtn = document.getElementById("sidebarToggle");

            if (!sidebar || !toggleBtn) return;

            sidebar.classList.add("no-transition");
            setTimeout(() => sidebar.classList.remove("no-transition"), 50);

            if (localStorage.getItem("sidebar-collapsed") === "true") {
                sidebar.classList.add("collapsed");
            }

            toggleBtn.addEventListener("click", function () {
                sidebar.classList.toggle("collapsed");
                localStorage.setItem("sidebar-collapsed", sidebar.classList.contains("collapsed"));
            });
                window.addEventListener("DOMContentLoaded", () => {
                  sidebar.classList.remove("collapsed");
                });
            const currentUrl = window.location.pathname.toLowerCase();

            document.querySelectorAll(".sidebar-link").forEach(link => {

                const href = link.getAttribute("href")?.toLowerCase();

                if (href && currentUrl.startsWith(href)) {
                    link.classList.add("active");
                }
            });
        });
    </script>
</body>
</html>